<div class="settings-page">
  <div class="container page">
    <div class="row">

      <div class="col-md-6 offset-md-3 col-xs-12">
        <h1 class="text-xs-center">Your Settings</h1>
        <ul class="error-messages"></ul>

        <%= form_with model: @user do |f| %>
          <fieldset>
              <fieldset class="form-group">
                <%= f.text_field :profile_photo_url, class: "form-control", placeholder: "URL of profile picture" %>
              </fieldset>
              <fieldset class="form-group">
                <%= f.text_field :username, class: "form-control form-control-lg", placeholder: "Your Name" %>
              </fieldset>
              <fieldset class="form-group">
                <%= f.text_area :bio, class: "form-control form-control-lg", rows: 8, placeholder: "Short bio about you" %>
              </fieldset>
              <fieldset class="form-group">
                <%= f.text_field :email, class: "form-control form-control-lg", placeholder: "Email" %>
              </fieldset>
              <fieldset class="form-group">
                <!-- TODO -->
                <input class="form-control form-control-lg" type="password" placeholder="Password">
              </fieldset>
              <%= f.submit "Update Settings", class: "btn btn-lg btn-primary pull-xs-right" %>
          </fieldset>
        <% end %>
      </div>

    </div>
  </div>
</div>
